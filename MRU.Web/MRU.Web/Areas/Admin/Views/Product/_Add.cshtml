@model MRU.Web.Models.Product.ProductModel

<div>
@using (Html.BeginForm("Add", "Product", FormMethod.Post))
{
    <div class="form-group">
            @Html.LabelFor(m => m.Title, new { @class="col-lg-2 control-label required"})
            <div class="col-lg-10">
                @Html.TextBoxFor(m => m.Title, new { @class = "input-lg form-control"})
            </div>
    </div>
    <br /><br />
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-lg-2 control-label" })
        <div class="col-lg-10">
            @Html.TextAreaFor(m => m.Description, new { @class = "input-lg form-control", @rows = "6" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ShortDescription, new { @class = "col-lg-2 control-label required" })
        <div class="col-lg-10">
            @Html.TextAreaFor(m => m.ShortDescription, new { @class = "input-lg form-control", @rows = "3" })
        </div>
    </div>

    <br />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Height, new { @class = "col-lg-2 control-label required" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(m => m.Height, new { @class = "input-lg form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Width, new { @class = "col-lg-2 control-label required" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(m => m.Width, new { @class = "input-lg form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Length, new { @class = "col-lg-2 control-label required" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(m => m.Length, new { @class = "input-lg form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Price, new { @class = "col-lg-2 control-label required" })
                <div class="col-lg-10">
                    <div class="input-group">
                        <span class="input-group-addon">$</span>
                        @Html.TextBoxFor(m => m.Price, new { @class = "input-lg form-control" })
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-6">
            
            <div class="form-group">
                @Html.LabelFor(m => m.Taxable, new { @class = "col-lg-2 control-label required" })
                <div >
                    @Html.CheckBoxFor(m => m.Taxable)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Active, new { @class = "col-lg-2 control-label required" })
                <div >
                    @Html.CheckBoxFor(m => m.Active)
                </div>
            </div>
        </div>
    </div>


    <a id="AddSubmit" class="fa fa-plus-circle btn btn-success"> Add Product</a>
    <a id="AddCancel" class="fa fa-times btn btn-warning"> Cancel</a>
}
</div>