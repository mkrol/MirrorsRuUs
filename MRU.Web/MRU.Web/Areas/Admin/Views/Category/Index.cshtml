@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@model List<MRU.Web.Models.Category.CategoryModel>

   
        <div class="page-header">
            <div style="float:right;"><a data-toggle="modal" href="/Admin/Category/Add" data-target="#categoryModal" class="btn btn-success"><i class="fa fa-plus-circle"></i> Add Category</a></div>
            <h1><i class="fa fa-database"></i> Categories</h1>
        </div>

        <table id="example" class="display" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Parent Category</th>
                    <th></th>                    
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model)
                { 
                <tr>
                    <td>@cat.Name</td>
                    <td>System Architect</td>
                    <td>Edinburgh</td>
                    <td>61</td>
                    <td>2011/04/25</td>
                    <td>$320,800</td>
                </tr>
                <tr>
                    <td>Garrett Winters</td>
                    <td>Accountant</td>
                    <td>Tokyo</td>
                    <td>63</td>
                    <td>2011/07/25</td>
                    <td>$170,750</td>
                </tr>
            </tbody>
        </table>
    </div>

   
        <div id="categoryModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content"></div>
            </div>
        </div>
